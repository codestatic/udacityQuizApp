<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- header style -->
    <style name="mainHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- card styles -->
    <style name="cardView">
        <item name="cardBackgroundColor">#0288D1</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="cardMaxElevation">4dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <!-- card line break style -->
    <style name="cardLineBreak">
        <item name="android:background">#424242</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <!-- question text style -->
    <style name="questionText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <!-- radio button style -->
    <style name="radioButtons">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#424242</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <!-- check box style -->
    <style name="checkBox">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#424242</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <!-- user text answer input style -->
    <style name="answer">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#424242</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- button style -->
    <style name="submitButton">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#424242</item>
        <item name="android:layout_margin">8dp</item>
    </style>

</resources>